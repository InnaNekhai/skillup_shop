<table class="table table-striped">
    <tr>
        <th>Товар</th>
        <th>Цена</th>
        <th>Количество</th>
        <th>Стоимость</th>
    </tr>

    {# @var item \App\Entity\OrderItem #}
    {% for item in order.items %}
        <tr>
            <td>{{ item.product.name }}</td>
            <td>{{ item.product.price }}</td>
            <td>
                <a>
                    <span class="glyphicons glyphicons-minus"></span>
                </a>

                {{ item.count }}

                    <a>+</a>
            </td>
            <td>{{ item.amount }}</td>
        </tr>
    {% endfor %}

    <tr>
        <td colspan="2">Всего</td>
        <td>{{ order.count }}</td>
        <td>{{ order.amount }}</td>

    </tr>

</table>