{% extends 'base.html.twig' %}

{% block title %}
    Корзина - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Корзина</h1>

        <table class="table table-striped">
            <tr>
                <th>Товар</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>Стоимость</th>
            </tr>

            {# @var item \App\Entity\OrderItem #}
            {% for item in order.items %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.price }}</td>
                    <td>
                        <button>
                            <a>-</a>
                        </button>
                        {{ item.count }}
                        <button>
                            <a>+</a>
                        </button>

                    </td>
                    <td>{{ item.amount }}</td>
                </tr>
            {% endfor %}

            <tr>
                <td colspan="2">Всего</td>
                <td>{{ order.count }}</td>
                <td>{{ order.amount }}</td>

            </tr>

        </table>
    </div>
{% endblock %}





