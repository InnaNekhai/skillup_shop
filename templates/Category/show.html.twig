{% extends 'base.html.twig' %}

{% block title  %}
    {{ category.name }} - {{ parent() }}
{% endblock %}

{% block body %}

    {% for message in app.flashes('notice') %}
        <p>{{ message }}</p>
    {% endfor %}

    Выбранная категория: {{ category.name }} <br>
    Страница: {{ page }}<br>

    <div class="row">
        {% include 'partials/products.html.twig' with {'products': category.products} %}
    </div>

{% endblock %}